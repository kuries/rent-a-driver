    <body>
        <!-- Navbar -->

        <%- include('header') -%>

        <section class="otp vh-100" id="otp">
            <div class="container py-5 h-100">
                <div class="row">
                    <div class="d-flex justify-content-center align-items-center h-100">
                        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                            <div class="card shadow-2-strong" style="border-radius: 1rem;">
                                <div class="card-body p-5 text-center">
                                    <h4 class="text-center mb-5" style="color: white;">Login</h4>
                                    <form id="form2" action="/<%= id %>/login" method="post">
                                        <div class="form-floating mb-3">
                                            <!-- <input type="email" name="email" class="form-control" id="email" placeholder="name@example.com"> -->
                                            <input type="email" name="email" pattern="[-!#$%&'*+\/0-9=?ก-๙A-Z^_a-z`{|}~](\.?[-!#$%&'*+\/0-9=?ก-๙A-Z^_a-z`{|}~])*@[ก-๙a-zA-Z0-9](-*\.?[ก-๙a-zA-Z0-9])*\.[ก-๙a-zA-Z](-?[ก-๙a-zA-Z0-9])+$" placeholder="E-mail" required="" class="form-control"><br />
                                            <label for="email">Email address</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input type="password" name="password" placeholder="Password" required="" class="form-control"><br />
                                            <label for="password">Password</label>
                                        </div>
                                        <div class="mb-3">
                                            <button type="submit"  value="Login" class="btn btn-primary">Login</button>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <div class="mssg bg-danger">
                                                <span id="check"></span>
                                            </div>
                                            <div id="LangTable"><a href="/profile" id="aa"></a>
                                            </div>
                                            <div class="mb-3" style="color: white;"><span>Forgot password? </span><a href="/otp/login/<%= id %>">click here</a>
                                            </div>
                                            <div class="mb-3" style="color: white;" id="LangTable"><span>Do you want to register a new Account? </span><a href="/<%= id %>/register">click here</a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


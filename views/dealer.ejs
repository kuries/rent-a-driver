<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    </head>
    <body>
        <!-- Navbar -->
        <%- include('header') -%>
        <!-- User Info -->

        <section class="usr_inf" id="usr_inf" >
            <div class="container position-relative">
                <div class="row">
                    <h1><%= title %></h1>
                    <h2>Your Name: <%= title %></h2>
                    <p>Welcome to <%= title %></p>
                </div>
            </div>
        </section>

        <section class="search_sel">
            <div class="d-grid gap-2 d-md-block d-md-flex justify-content-md-end">
                <select class="btn btn-info" id="stateSelect" size="1" onchange="makeSubmenu(this.value)">
                    <option value="" disabled selected>Choose State</option>
                </select>
    
                <select class="btn btn-secondary" id="citySelect" size="1" >
                    <option value="" disabled selected>Choose City</option>
                    <option></option>
                </select>
                
                <button class="btn btn-dark" onclick="displaySelected()">Show</button>
            </div>
        </section>

        <!-- Driver Card -->
        <section class="dcard" id="dcard">
            <div class="container">
                <div class="row">
                    <p class="lead d-flex justify-content-start">Available drivers: </p>
                    <div class="card md-3" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Driver Name:</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Vehicle Number:</h6>
                            <p class="card-text">Route Details</p>
                            <a href="#" class="card-link btn btn-warning">Book Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
        <script type="text/javascript" src="/javascripts/searchCities.js"></script>
    </body>
</html>

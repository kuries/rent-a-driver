<!DOCTYPE html>
<html>

    <head>
        <title>Login</title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>

    <body>
      <section class="otp vh-100" id="otp">
        <div class="container py-5 h-100">
          <div class="row">
            <div class="d-flex justify-content-center align-items-center h-100">
              <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                  <div class="card-body p-5 text-center">
                    <h4 class="text-center mb-5">Verify Email</h4>
                    <h5 class="mb-3">Email: <%= email %></h5>
                    <form action="/otp/verify" method="POST">
                      <div class="form-floating mb-3">
                        <input type="text" name="password" id="password" class="form-control" placeholder="OTP">
                        <label for="password">Enter OTP</label>
                      </div>
                      
                      <div class="mb-3">
                        Time left = <span id="timer"></span>
                      </div>
                      
                      <div>
                        <input type="hidden" name="email" id="email" value="<%= email %>">
                      </div>
                      <div>
                        <button class="btn btn-primary">Send</button>
                      </div>
                    </form>

                    <form action="/otp/resend" method="POST">
                      <div>
                        <div>
                          <input type="hidden" name="email" id="email" value="<%= email %>">
                        </div>
                        <button class="mt-2 btn btn-primary">Resend</button>
                        </div>
                    </form>
                    
                    
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
      <script type="text/javascript" src="/javascripts/otpTimer.js"></script>
    </body>

</html>